            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            on_release: app.root.current = 'movie_input'

        Button:
            text: 'Already have an account? Sign in here.'
            bold: 'True'
            background_normal: ''
