<BootUp>:
    name: 'boot_up'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        Button:
            text: 'Click Here to Begin'
            bold: 'True'
            size: 200, 100
            size_hint: None, None
            background_normal: ''
            background_color: 0.839, 0.188, 0.192, 1
            on_release: app.root.current = 'sign_up'

