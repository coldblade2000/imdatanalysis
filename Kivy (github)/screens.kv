<SignUp>:
    name: 'sign_up'
    FloatLayout:

        Label:
            text: 'Create an Account'
            color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}

        Button:
            text: 'Sign Up'
            bold: 'True'
            background_normal: ''
            background_color: 0.839, 0.188, 0.192, 1
